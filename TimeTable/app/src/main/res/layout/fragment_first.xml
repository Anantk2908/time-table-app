<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.eijaz.tabstutorial.FirstFragment">


    <ImageView
        android:id="@+id/TTVIEW"
        android:layout_width="226dp"
        android:layout_height="214dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:srcCompat="@drawable/Monday.png"/>

    <TextView
        android:id="@+id/WEEKVIEW"
        android:layout_width="169dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/TTVIEW"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginBottom="72dp"
        android:layout_toEndOf="@+id/TTVIEW"
        android:layout_toRightOf="@+id/TTVIEW"
        android:text="WeekName"
        android:textSize="30dp"
        android:textColor="#FF0303"/>


</RelativeLayout>
